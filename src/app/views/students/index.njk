{% extends 'layout.njk' %}

{% block content %}
<div class="card table-container">
<span class="titlePage">Cadastro de Alunos</span>
<a href="students/register"><button class="new">Novo</button></a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Instrutor</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
            {% for student in students %}
            <tr>
                <td>
                    <span style="background-image: url( {{ student.avatar_url }} )"></span>
                    {{ student.name }}</td>
                <td>
                </td>
                <td><a href="/students/{{ student.id }}">Ver</a></td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
</div>
{% endblock content %}