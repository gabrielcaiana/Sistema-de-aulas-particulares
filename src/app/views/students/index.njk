{% extends 'layout.njk' %}

{% block content %}
<div class="table-container">
    <div class="header">
        <a href="students/register"><button class="new">Novo</button></a>
        <form action="/students" mehotd="GET">
            <input type="text" name="filter" placeholder="Nome ou Email" value="{{filter}}">
            <button type="submit">Filtrar</button>
        </form>
    </div>
        <table width="100%">
            <thead>
                <tr>
                    <th>Alunos</th>
                    <th>Email</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for student in students %}
                    <tr>
                        <td>
                            <span style="background-image: url( {{ student.avatar_url }} )"></span>
                            {{ student.name }}</td>
                        <td>
                            {{ student.email }}
                        </td>
                        <td>
                            <a href="/students/{{ student.id }}">Ver</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="pagination"
            data-page={{pagination.page}}
            data-total={{pagination.total}}
            data-filter={{filter}}
        ></div>
    </div>
{% endblock content %}