{% extends 'layout.njk' %}

{% block content %}
<div class="new">
    <a href="students/register"><button>Cadastrar novo</button></a>
</div>
<div class="card table-container">
        <table width="100%">
            <thead>
                <tr>
                    <th>Instrutor</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
            {% for student in students %}
            <tr>
                <td>
                    <span style="background-image: url( {{ student.avatar_url }} )"></span>
                    {{ student.name }}</td>
                <td>
              {% for atuacao in student.atuacao %}
                        <span>{{ atuacao }}</span>
                    {% endfor %}
                </td>
                <td><a href="/students/{{ student.id }}">Ver</a></td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
</div>
{% endblock content %}